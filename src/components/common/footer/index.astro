---
import Container from "@/layouts/Container.astro"
---

<footer class="py-10">
    <Container>
        <div class="h-4 flex justify-between">
            <div>
                <img
                    src="/logo/the-weather-agency-logo.svg"
                    class="w-full h-full"
                />
            </div>
            <p class="font-museo_sans text-sm font-light">&copy; { new Date().getFullYear() }</p>
        </div>
        <div class="h-4 flex justify-between">
            <p class="font-museo_sans text-sm font-light">hello@theweather.agency</p>
            <section class="flex items-center gap-2">
                <p class="font-museo_sans text-sm font-light">Cookies</p>
                <p class="font-museo_sans text-sm font-light">Privacy</p>
                <p class="font-museo_sans text-sm font-light">Imprint</p>
            </section>
        </div>
    </Container>
</footer>
