---
// IMPORTS ASTRO LAYOUTS
import Container from "@/layouts/Container.astro"

const runtime = Astro.locals.runtime
const env = runtime.env.ENVIRONMENT
---
{

    env === "staging" &&
    <section class="bg-om_orange h-12 md:h-10">
        <Container>
            <div class="flex items-center justify-center h-full">
                <p class="text-xs md:text-sm text-center text-white">This is staging environment created by <span class="underline underline-offset-4 font-semibold"><a href="https://blupp.co" target="_blank">Blupp Company</a></span> with some initial <span class="underline underline-offset-4 font-semibold"><a href="/benchmarking">benchmarking</a></span>. You can check the codebase on <span class="underline underline-offset-4 font-semibold"><a href="https://github.com/bluppco/orbitmedia" target="_blank">Github</a></span>.</p>
            </div>
        </Container>
    </section>

}
